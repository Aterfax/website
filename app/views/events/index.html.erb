<div class="container">
  <h1>
    Events
    <%= link_to new_event_path, class: 'btn btn-success' do %>
      <%= icon('fas', 'plus-square') %>
      Create New
    <% end %>
  </h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
        <th colspan="2">Date/Time</th>
        <th>Location</th>
        <th>LAN number</th>
        <th>Facebook event</th>
        <th>Ticket link</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.description&.truncate(27) %></td>
          <td><%= image_tag event.image_link, style: 'max-height: 50px;' if event.image_link %></td>
          <td><%= event.datetime %></td>
          <td><%= event.end_datetime %></td>
          <td><%= event.location %></td>
          <td><%= event.lan_number %></td>
          <td><%= event.facebook_event_id %></td>
          <td><%= event.ticket_link %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
