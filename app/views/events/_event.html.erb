<div class="card text-dark">
  <div class="card-header">
    <%= event.datetimes %>
  </div>
  <div class="card-body row no-gutters">
    <div class="col-md-6">
      <h5 class="card-title"><%= event.name %></h5>
      <p class="card-text"><%= event.description.truncate(100) %></p>
      <%= link_to 'View Event', event, class: 'btn btn-secondary' %>
    </div>
    <div class="col-md-6">
      <div class="h-100" style="background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.6)), url(<%= asset_path event.image_link %>); background-position: center center; background-size: cover; min-height: 200px;"></div>
    </div>
  </div>
  <div class="card-footer row no-gutters p-0 text-light text-center">
      <% unless event.facebook_event_id.blank? %>
        <%= link_to event.facebook_event_link, class: "col bg-facebook" do %>
            <%= icon('fab', 'facebook') %> View on Facebook
        <% end %>
      <% end %>
      <% unless event.ticket_link.blank? %>
        <%= link_to event.ticket_link, class: "col bg-secondary" do %>
          <div class="col bg-secondary">
              <%= icon('fas', 'ticket-alt') %> Buy Ticket
          </div>
        <% end %>
      <% end %>
    </div>
</div>

