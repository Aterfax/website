<%= bootstrap_form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.text_field :name %>
  <%= form.text_area :description %>
  <%= form.text_field :image_link %>
  <%= form.datetime_select :datetime, label: 'Date/Time' %>
  <%= form.text_field :location %>
  <%= form.number_field :lan_number, label: 'LAN Number'  %>
  <%= form.text_field :facebook_event_id %>
  <%= form.text_field :ticket_link %>
  <%= form.form_group :post_routes, label: { text: "Post to:" } do %>
    <%= form.check_box :facebook, label: "Facebook", inline: true %>
    <%= form.check_box :twitter, label: "Twitter", inline: true %>
    <%= form.check_box :discord, label: "Discord", inline: true %>
  <% end %>
  <%= form.submit %>
<% end %>
