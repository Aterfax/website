<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :image_link %>
    <%= form.text_field :image_link %>
  </div>

  <div class="field">
    <%= form.label :datetime, 'Date/Time' %>
    <%= form.datetime_select :datetime %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :lan_number , 'LAN Number' %>
    <%= form.number_field :lan_number %>
  </div>

  <div class="field">
    <%= form.label :facebook_event_id %>
    <%= form.text_field :facebook_event_id %>
  </div>

  <div class="field">
    <%= form.label :ticket_link %>
    <%= form.text_field :ticket_link %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
