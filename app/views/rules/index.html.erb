<h1>Rules</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Summary</th>
      <th>Full</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.code %></td>
        <td><%= rule.summary %></td>
        <td><%= rule.full %></td>
        <td><%= rule.icon %></td>
        <td><%= link_to 'Show', rule %></td>
        <td><%= link_to 'Edit', edit_rule_path(rule) %></td>
        <td><%= link_to 'Destroy', rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rule', new_rule_path %>
